@model EditTourHeaderViewModel

    <form method="post" enctype="multipart/form-data" asp-area="Admin" asp-controller="EditTour" asp-action="EditHeader">
        <aside id="colorlib-hero">
            <div class="flexslider">
                <ul class="slides">
                    @{
                        var base64 = Convert.ToBase64String(Model.HeaderImage);
                        var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                    }
                    <li style="background-image: url(@imgSrc);">
                        <div class="overlay"></div>
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-md-6 col-md-offset-3 col-sm-12 col-xs-12 slider-text">
                                    <div class="slider-text-inner text-center">
                                        <div class="form-group">
                                            <label asp-for="Title"></label>
                                            <input asp-for="Title" class="form-control" />
                                            <span asp-validation-for="Title" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <div class="col-md-10">
                                                <p>Upload one Head Picture</p>
                                                <label asp-for="HeaderImage" />
                                                <input type="file" id="files" asp-for="@Model.HeaderImage" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </aside>
        <div class="col-md-12 animate-box text-center">
            <p><button type="submit" class="btn btn-primary">Save Tour</button></p>
        </div>
    </form>
