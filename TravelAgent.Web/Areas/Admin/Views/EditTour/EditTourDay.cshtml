@model EditTourDayViewModel

    <aside id="colorlib-hero">
        <div class="flexslider">
            <ul class="slides">
                <li style="background-image: url(/images/tr26.jpg);">
                    <div class="overlay"></div>
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-6 col-md-offset-3 col-sm-12 col-xs-12 slider-text">
                                <div class="slider-text-inner text-center">
                                    <h2></h2>
                                    <h1></h1>
                                </div>
                            </div>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
    </aside>

    <div class="container">
        <div class="row">
            <form method="post" enctype="multipart/form-data" asp-area="Admin" asp-controller="EditTour" asp-action="EditTourDay">
                <div class="row">
                    @{
                        var base64Day = Convert.ToBase64String(Model.DayPicture);
                        var imgSrcDay = String.Format("data:image/gif;base64,{0}", base64Day);
                    }
                    <div class="col-md-12 animate-box">
                        <div class="room-wrap">
                            <div class="row">
                                <div class="col-md-6 col-sm-6">
                                    <div class="room-img" style="background-image: url(@imgSrcDay);"></div>

                                    <div class="form-group">
                                        <div class="col-md-10">
                                            <p>Upload picture for day @Model.DayId</p>
                                            <label asp-for="DayPicture" />
                                            <input type="file" id="files" asp-for="@Model.DayPicture" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 col-sm-6">
                                    <div class="desc">
                                        <span class="day-tour">Day @Model.DayId</span>
                                        <label asp-for="DayTitle"></label>
                                        <input asp-for="@Model.DayTitle" class="form-control" />

                                        <label asp-for="DayDescription"></label>
                                        <textarea asp-for="@Model.DayDescription" class="form-control"></textarea>
                                        <input type="hidden" asp-for="DayId" value="@Model.DayId">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    }
                    <div class="col-md-12 animate-box text-center">
                        <p><button type="submit" class="btn btn-primary">Save Tour</button></p>
                    </div>
                </div>
            </form>
        </div>
    </div>
