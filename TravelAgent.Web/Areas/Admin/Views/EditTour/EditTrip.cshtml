@model EditTripViewModel

<aside id="colorlib-hero">
    <div class="flexslider">
        <ul class="slides">
            <li style="background-image: url(/images/tr26.jpg);">
                <div class="overlay"></div>
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-6 col-md-offset-3 col-sm-12 col-xs-12 slider-text">
                            <div class="slider-text-inner text-center">
                                <h2></h2>
                                <h1></h1>
                            </div>
                        </div>
                    </div>
                </div>
            </li>
        </ul>
    </div>
</aside>
<div class="container">
    <div class="row">
        <form method="post" enctype="multipart/form-data" asp-area="Admin" asp-controller="EditTour" asp-action="EditTrip">
            <div class="col-md-12 animate-box">
                <div class="room-wrap">
                    <div class="row">
                        <div class="col-md-6 col-sm-6">
                            <label asp-for="StartDate"></label>
                            <input asp-for="@Model.StartDate" class="form-control datepicker-dropdown" />
                        </div>
                        <div class="col-md-6 col-sm-6">
                            <label asp-for="EndDate"></label>
                            <input asp-for="@Model.EndDate" class="form-control datepicker" />
                        </div>
                        <div class="col-md-6 col-sm-6">
                            <label asp-for="Price"></label>
                            <input asp-for="@Model.Price" class="form-control" />
                            <input type="hidden" asp-for="Id" value="@Model.Id">
                        </div>
                        <div class="col-md-12 animate-box text-center">
                            <p><button type="submit" class="btn btn-primary">Save Service</button></p>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
