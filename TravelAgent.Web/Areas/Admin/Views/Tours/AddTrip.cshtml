@model AddTripFormViewModel

<form method="post" enctype="multipart/form-data" asp-area="Admin" asp-controller="Tours" asp-action="AddTrip">
    <div class="colorlib-wrap">
        <div class="container">
            <div class="row">
                <div class="col-md-9">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="wrap-division">
                                <div class="col-md-12 col-md-offset-0 heading2 animate-box">
                                </div>
                                <div class="row">
                                    <div class="form-group">
                                        <label asp-for="StartDate"></label>
                                        <input asp-for="StartDate" class="form-control datepicker" name="StartDate" />
                                        <span asp-validation-for="StartDate" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="EndDate"></label>
                                        <input asp-for="EndDate" class="form-control datepicker" name="EndDate" />
                                        <span asp-validation-for="EndDate" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Price"></label>
                                        <input asp-for="Price" class="form-control" />
                                        <span asp-validation-for="Price" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="BusSeatsNumber"></label>
                                        <input asp-for="BusSeatsNumber" class="form-control" />
                                        <span asp-validation-for="BusSeatsNumber" class="text-danger"></span>
                                    </div>
                                    <input type="hidden" asp-for="TourId"  value="@Model.Id" />
                                </div>
                                <button type="submit" class="btn btn-default">Add Trip</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>